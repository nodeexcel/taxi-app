{
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "ignorePatterns": [
        "src/migrations/**/*.js"
      ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "mjs": "always"
        }
      ]
    }
  }
  